{
  "ConnectionStrings": {
    "DefaultConnection": "Test"
  },
  "GlobalSettings": {
    "ReadOnlyMode": "False",
    "MaxQueryRows": 1000,
    "CommentNumberTemplate": "#{0:00000}",
    "RetractionTokenLiveTimeHours": 8
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "FileLogger": {
      "Options": {
        "FolderPath": "logs",
        "FilePath": "{date}.log"
      },
      "LogLevel": {
        "MAS.GitlabComments.Controllers": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
